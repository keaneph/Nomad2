    <None Remove="Resources\Fonts\Rubik\Rubik-Medium.ttf" />
    <None Remove="Resources\Fonts\Rubik\Rubik-Regular.ttf" />
    <None Remove="Resources\Fonts\Rubik\Rubik-SemiBold.ttf" />
    <None Remove="Resources\Fonts\Satoshi\Satoshi-Black.ttf" />
    <None Remove="Resources\Fonts\Satoshi\Satoshi-Bold.ttf" />
    <None Remove="Resources\Fonts\Satoshi\Satoshi-Light.ttf" />
    <None Remove="Resources\Fonts\Satoshi\Satoshi-Medium.ttf" />
    <None Remove="Resources\Fonts\Satoshi\Satoshi-Regular.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Fonts\Rubik\Rubik-Bold.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Rubik\Rubik-ExtraBold.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Rubik\Rubik-Italic.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Rubik\Rubik-Light.ttf">
