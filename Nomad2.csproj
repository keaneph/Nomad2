      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Rubik\Rubik-SemiBold.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\Fonts\Satoshi\Satoshi-Black.ttf" />
    <Resource Include="Resources\Fonts\Satoshi\Satoshi-Bold.ttf" />
