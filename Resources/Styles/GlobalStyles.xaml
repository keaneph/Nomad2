<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fonts -->
    <FontFamily x:Key="Rubik">/Nomad2;component/Resources/Fonts/Rubik/#Rubik</FontFamily>
    <FontFamily x:Key="RubikSemibold">/Nomad2;component/Resources/Fonts/Rubik/#Rubik Semibold</FontFamily>
    <FontFamily x:Key="RubikBold">/Nomad2;component/Resources/Fonts/Rubik/#Rubik Bold</FontFamily>
    <FontFamily x:Key="Satoshi">/Nomad2;component/Resources/Fonts/Satoshi/#Satoshi</FontFamily>

    <!-- Base Colors -->
    <Color x:Key="PrimaryBackgroundColor">#06071A</Color>
    <Color x:Key="SecondaryBackgroundColor">#0F1123</Color>
    <Color x:Key="ThirdBackgroundColor">#282939</Color>
    <Color x:Key="FourthBackgroundColor">#191A30</Color>
    <Color x:Key="BorderColor">#282A3D</Color>
    <Color x:Key="TextPrimaryColor">#E0E1EE</Color>
    <Color x:Key="TextSecondaryColor">#74769A</Color>
    <Color x:Key="SearchboxBackgroundColor">#0F1123</Color>
    <Color x:Key="ButtonBackgroundColor">#181B30</Color>
    <Color x:Key="PurpleColor">#682EC7</Color>
    <Color x:Key="GreenColor">#2EC78A</Color>
    <Color x:Key="OrangeColor">#FF9F0A</Color>
    <Color x:Key="RedColor">#843153</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgroundColor}"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}"/>
    <SolidColorBrush x:Key="ThirdBackgroundBrush" Color="{StaticResource ThirdBackgroundColor}"/>
    <SolidColorBrush x:Key="FourthBackgroundBrush" Color="{StaticResource FourthBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="SearchboxBackgroundBrush" Color="{StaticResource SearchboxBackgroundColor}"/>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="PurpleBrush" Color="{StaticResource PurpleColor}"/>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource OrangeColor}"/>
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}"/>

    <!-- Common Gradients -->
    <RadialGradientBrush x:Key="PurpleGradientBackground" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#682EC7" Offset="0.1"/>
        <GradientStop Color="#190F33" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="PurpleGradientHover" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#4B2393" Offset="0.1"/>
        <GradientStop Color="#190F33" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="PurpleGradientBorder" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
        <GradientStop Color="#682EC7" Offset="0.5"/>
        <GradientStop Color="#2B2942" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="RedGradientBackground" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#843153" Offset="0.1"/>
        <GradientStop Color="#2C1A1E" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="RedGradientHover" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#6E2945" Offset="0.1"/>
        <GradientStop Color="#2C1A1E" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="RedGradientBorder" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
        <GradientStop Color="#843153" Offset="0.5"/>
        <GradientStop Color="#3A2228" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="GreenGradientBackground" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#2EC78A" Offset="0.1"/>
        <GradientStop Color="#103D2E" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="GreenGradientHover" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#23A976" Offset="0.1"/>
        <GradientStop Color="#103D2E" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="GreenGradientBorder" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
        <GradientStop Color="#23A976" Offset="0.5"/>
        <GradientStop Color="#103D2E" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="DisabledBackground" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
        <GradientStop Color="#282939" Offset="0.1"/>
        <GradientStop Color="#1A1728" Offset="1"/>
    </RadialGradientBrush>
    <RadialGradientBrush x:Key="DisabledBorder" GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
        <GradientStop Color="#282939" Offset="0.5"/>
        <GradientStop Color="#1A1728" Offset="1"/>
    </RadialGradientBrush>

    <!-- Common Effects -->
    <DropShadowEffect x:Key="PurpleShadowEffect" Color="#682EC7" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
    <DropShadowEffect x:Key="RedShadowEffect" Color="#843153" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
    <DropShadowEffect x:Key="GreenShadowEffect" Color="#75B99B" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>

    <!-- Searchbox Style -->
    <!--FIXME: searchbox hover and selected-->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="34"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="{StaticResource SearchboxBackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="1.5,1.5,1.5,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource FourthBackgroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Grid>
                            <Path Data="{StaticResource SearchIcon}"
                                  Stroke="{StaticResource TextSecondaryBrush}"
                                  StrokeThickness="1.5"
                                  Width="20"
                                  Height="20"
                                  Margin="8,0,0,0"
                                  HorizontalAlignment="Left"/>
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                            <TextBlock Text="Search"
                                     Margin="35,0,0,0"
                                     VerticalAlignment="Center"
                                     IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu Styles -->
    <Style x:Key="MenuHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="12,0,0,8"/>
    </Style>

    <!-- Menu Item Style -->
    <Style x:Key="MenuItemStyle" TargetType="RadioButton">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikBold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <Grid x:Name="BackgroundContainer">
                            <Border x:Name="LeftIndicator"
                                    Width="7"
                                    Height="23"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,1.5,1.5,1.5"
                                    CornerRadius="0,5,5,0"
                                    Margin="-10,0,0,0"/>

                            <Border x:Name="MainBackground"
                                    Background="{TemplateBinding Background}"
                                    Height="39" 
                                    CornerRadius="8"
                                    BorderBrush="Transparent"
                                    BorderThickness="2,1.5,2,2"
                                    Margin="8,0,20,-5"/>
                        </Grid>

                        <Grid Margin="8,0,20,-5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Column="0" 
                                            Content="{TemplateBinding Tag}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" 
                                     Text="{TemplateBinding Content}" 
                                     VerticalAlignment="Center"
                                     Foreground="{TemplateBinding Foreground}"
                                     Margin="4,0,0,0"/>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="MainBackground" Value="{StaticResource FourthBackgroundBrush}"/>
                            <Setter Property="Foreground" Value="#E0E1EE"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="#E0E1EE"/>
                            <Setter Property="Background" TargetName="MainBackground" Value="{StaticResource PurpleGradientBackground}"/>
                            <Setter Property="Background" TargetName="LeftIndicator">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0,0.3" RadiusX="2" RadiusY="1">
                                        <GradientStop Color="#682EC7" Offset="0.4"/>
                                        <GradientStop Color="#190F33" Offset="0.7"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="BorderBrush" TargetName="MainBackground" Value="{StaticResource PurpleGradientBorder}"/>
                            <Setter Property="BorderBrush" TargetName="LeftIndicator" Value="#7553B2"/>
                            <Setter Property="Effect" TargetName="BackgroundContainer" Value="{StaticResource PurpleShadowEffect}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Path Style -->
    <Style x:Key="PathStyle" TargetType="Path">
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeLineJoin" Value="Round"/>
        <Setter Property="StrokeStartLineCap" Value="Round"/>
    </Style>

    <!-- Base Combobox Style -->
    <Style x:Key="BaseComboboxStyle" TargetType="ComboBox">
        <Setter Property="Height" Value="25"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,20"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource PurpleGradientBackground}"/>
        <Setter Property="BorderThickness" Value="1.5,1.5,1.5,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource PurpleGradientBorder}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                    Background="{Binding Background, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                    IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Focusable="False">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="MainBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                            BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                            CornerRadius="8">
                                        <Border.Effect>
                                            <DropShadowEffect Color="{StaticResource PurpleColor}" 
                                                             BlurRadius="20" 
                                                             ShadowDepth="0" 
                                                             Opacity="0.3"/>
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                                <ContentPresenter Grid.Column="0"
                                                         Content="{Binding Path=SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                         ContentTemplate="{Binding Path=SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                         ContentTemplateSelector="{Binding Path=ItemTemplateSelector, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                         VerticalAlignment="Center"
                                                         Margin="12,0,0,0"/>

                                            <Path Grid.Column="1"
                                                  Data="M1,1 L5,5 L9,1"
                                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                  StrokeThickness="1.5"
                                                  Width="10"
                                                  Height="10"
                                                  Stretch="Uniform"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,12,0"/>
                                        </Grid>
                                    </Border>
                                    <!--needed to setup the bg binding in order for the hover to work...-->
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="MainBorder" Property="Background" Value="{StaticResource PurpleGradientHover}"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="MainBorder" Property="CornerRadius" Value="8,8,0,0"/>
                                            <Setter Property="Background" Value="{StaticResource PurpleGradientBackground}">
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <Popup x:Name="PART_Popup"
                               AllowsTransparency="True"
                               IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                               PopupAnimation="Slide"
                               Placement="Bottom">
                            <Border x:Name="DropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"                          
                                    Background="{StaticResource PrimaryBackgroundBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="0,0,8,8"
                                    Margin="0,0,0,0">
                                <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"
                                              KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="0">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>