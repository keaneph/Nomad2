<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Fonts -->
    <FontFamily x:Key="Rubik">/Nomad2;component/Resources/Fonts/Rubik/#Rubik</FontFamily>
    <FontFamily x:Key="RubikSemibold">/Nomad2;component/Resources/Fonts/Rubik/#Rubik Semibold</FontFamily>
    <FontFamily x:Key="RubikBold">/Nomad2;component/Resources/Fonts/Rubik/#Rubik Bold</FontFamily>
    <FontFamily x:Key="Satoshi">/Nomad2;component/Resources/Fonts/Satoshi/#Satoshi</FontFamily>


    
    
    <!-- Searchbox STYLE-->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="34"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="{StaticResource SearchboxBackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="1.5,1.5,1.5,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource FourthBackgroundBrush}"/>
        <Setter Property="Template"> 
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Grid>
                            <Path Data="{StaticResource SearchIcon}"
                                  Stroke="{StaticResource TextSecondaryBrush}"
                                  StrokeThickness="1.5"
                                  Width="20"
                                  Height="20"
                                  Margin="8,0,0,0"
                                  HorizontalAlignment="Left"/>  
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                            <TextBlock Text="Search"
                                       Margin="35,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu header STYLE-->
    <Style x:Key="MenuHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="12,0,0,8"/>
    </Style>

    <!-- Menu item STYLE-->
    <Style x:Key="MenuItemStyle" TargetType="RadioButton">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikBold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <!-- Background elements container -->
                        <Grid x:Name="BackgroundContainer">
                            <!-- Left indicator bar -->
                            <Border x:Name="LeftIndicator"
                            Width="7"
                            Height="23"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            VerticalAlignment="Center"
                            BorderBrush="Transparent"
                            BorderThickness="0,1.5,1.5,1.5"
                            CornerRadius="0,5,5,0"
                            Margin="-10,0,0,0"/>

                            <!-- Main background -->
                            <Border x:Name="MainBackground"
                                Background="{TemplateBinding Background}"
                                Height="39" 
                                CornerRadius="8"
                                BorderBrush="Transparent"
                                BorderThickness="2,1.5,2,2"
                                Margin="8,0,20,-5"/>
                        </Grid>

                        <!-- Content -->
                        <Grid Margin="8,0,20,-5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter Grid.Column="0" 
                                              Content="{TemplateBinding Tag}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" 
                                 Text="{TemplateBinding Content}" 
                                 VerticalAlignment="Center"
                                 Foreground="{TemplateBinding Foreground}"
                                 Margin="4,0,0,0"/>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="MainBackground" Value="#1A1C2E"/>
                            <Setter Property="Foreground" Value="#E0E1EE"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="#E0E1EE"/>
                            <Setter Property="Background" TargetName="MainBackground">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                                        <GradientStop Color="#682EC7" Offset="0.1"/>
                                        <GradientStop Color="#190F33" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" TargetName="LeftIndicator">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0,0.3" RadiusX="2" RadiusY="1">
                                        <GradientStop Color="#682EC7" Offset="0.4"/>
                                        <GradientStop Color="#190F33" Offset="0.7"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <!--
                        <Setter Property="Background" TargetName="LeftIndicator">
                            <Setter.Value>
                                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.6" RadiusY="0.9">
                                    <GradientStop Color="#4B2393" Offset="0.5"/>
                                    <GradientStop Color="#190F33" Offset="1"/>
                                </RadialGradientBrush>
                            </Setter.Value>
                        </Setter>
                        -->


                            <!--Not sure whether to add this border or not-->
                            <Setter Property="BorderBrush" TargetName="MainBackground">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
                                        <GradientStop Color="#682EC7" Offset="0.5"/>
                                        <GradientStop Color="#2B2942" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="BorderBrush" TargetName="LeftIndicator" Value="#7553B2">
                            </Setter>

                            <!--
                        <Setter Property="BorderBrush" TargetName="LeftIndicator">
                            <Setter.Value>
                                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,1" RadiusX="0.6" RadiusY="0.9">
                                    <GradientStop Color="#4B2393" Offset="0.5"/>
                                    <GradientStop Color="#190F33" Offset="1"/>
                                </RadialGradientBrush>
                            </Setter.Value>
                        </Setter>
                        -->
                            <Setter Property="Effect" TargetName="BackgroundContainer">
                                <Setter.Value>
                                    <DropShadowEffect Color="#682EC7" 
                                                BlurRadius="20" 
                                                ShadowDepth="0" 
                                                Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Path STYLE-->
    <Style x:Key="PathStyle" TargetType="Path">
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeLineJoin" Value="Round"/>
        <Setter Property="StrokeStartLineCap" Value="Round"/>
    </Style>

    <!-- Form Styles -->
    <Style x:Key="FormLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,10,0,5"/>
    </Style>

    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#1C1C28"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#1C1C28"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10,0"/>
    </Style>

    <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#1C1C28"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style x:Key="BaseComboboxStyle" TargetType="ComboBox">
        <Setter Property="Height" Value="39"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="0,20"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="{StaticResource FourthBackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="1.5,1.5,1.5,2"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      Background="{Binding Background, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                      Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      Focusable="False">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="MainBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                        CornerRadius="2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Content -->
                                            <ContentPresenter Grid.Column="0"
                                                        Content="{Binding Path=SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                        ContentTemplate="{Binding Path=SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                        ContentTemplateSelector="{Binding Path=ItemTemplateSelector, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                        VerticalAlignment="Center"
                                                        Margin="12,0,0,0"/>

                                            <!-- Dropdown Arrow -->
                                            <Path Grid.Column="1"
                                              Data="M1,1 L5,5 L9,1"
                                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                              StrokeThickness="1.5"
                                              Width="10"
                                              Height="10"
                                              Stretch="Uniform"
                                              VerticalAlignment="Center"
                                              Margin="0,0,12,0"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1A1C2E"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                                                        <GradientStop Color="#4B2393" Offset="0.1"/>
                                                        <GradientStop Color="#190F33" Offset="1"/>
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <!-- Popup for dropdown -->
                        <Popup x:Name="PART_Popup"
                           AllowsTransparency="True"
                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                           PopupAnimation="Slide"
                           Placement="Bottom">
                            <Border x:Name="DropDownBorder"
                                MinWidth="{TemplateBinding ActualWidth}"                          
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="0"
                                CornerRadius="2"
                                Margin="0,5,0,0">
                                <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"
                                          KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Item Container Style -->
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Padding" Value="12,8"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#282939"/>
                                        <Setter Property="Foreground" Value="#E0E1EE"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                                                    <GradientStop Color="#682EC7" Offset="0.1"/>
                                                    <GradientStop Color="#190F33" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Foreground" Value="#E0E1EE"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="39"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="2,1.5,2,2"/>
        <Setter Property="Width" Value="140"/>
           <!--192 width-->
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Foreground" Value="#E0E1EE"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#682EC7" 
                                            BlurRadius="20" 
                                            ShadowDepth="0" 
                                            Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <!-- Content Grid with Icon and Text -->
                        <Grid Margin="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <ContentPresenter Grid.Column="0" 
                                        Content="{TemplateBinding Tag}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0"/>

                            <!-- Text -->
                            <ContentPresenter Grid.Column="1"
                                        Content="{TemplateBinding Content}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                    <GradientStop Color="#682EC7" Offset="0.1"/>
                    <GradientStop Color="#190F33" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
                    <GradientStop Color="#682EC7" Offset="0.5"/>
                    <GradientStop Color="#2B2942" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>

        <!-- Triggers -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                            <GradientStop Color="#4B2393" Offset="0.1"/>
                            <GradientStop Color="#190F33" Offset="1"/>
                        </RadialGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="39"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="2,1.5,2,2"/>
        <!--192 width-->
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Foreground" Value="#E0E1EE"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#843153" 
                                        BlurRadius="20" 
                                        ShadowDepth="0" 
                                        Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <!-- Content Grid with Icon and Text -->
                        <Grid Margin="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <ContentPresenter Grid.Column="0" 
                                    Content="{TemplateBinding Tag}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>

                            <!-- Text -->
                            <ContentPresenter Grid.Column="1"
                                    Content="{TemplateBinding Content}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                    <GradientStop Color="#843153" Offset="0.1"/>
                    <GradientStop Color="#2C1A1E" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
                    <GradientStop Color="#843153" Offset="0.5"/>
                    <GradientStop Color="#3A2228" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>

        <!-- Triggers -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                            <GradientStop Color="#6E2945" Offset="0.1"/>
                            <GradientStop Color="#2C1A1E" Offset="1"/>
                        </RadialGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--Background gradient:
            - Start: #44336A (darker purple)
            - End: #1A1728 (very dark purple)

            Border gradient:
            - Start: #44336A
            - End: #2B2942-->
    
    <Style x:Key="TertiaryButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="25"/>
        <Setter Property="Foreground" Value="#E0E1EE"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="1.5,1.5,1.5,1.5"/>
        <Setter Property="Width" Value="80"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>

        <!-- Add background and border brush -->
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                    <GradientStop Color="#682EC7" Offset="0.1"/>
                    <GradientStop Color="#190F33" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
                    <GradientStop Color="#682EC7" Offset="0.5"/>
                    <GradientStop Color="#2B2942" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#682EC7" 
                                BlurRadius="20" 
                                ShadowDepth="0" 
                                Opacity="0.3"/>
                            </Border.Effect>
                        </Border>

                        <!-- Fixed content presenter to display Tag properly -->
                        <ContentPresenter Content="{TemplateBinding Tag}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Add hover state -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                            <GradientStop Color="#4B2393" Offset="0.1"/>
                            <GradientStop Color="#190F33" Offset="1"/>
                        </RadialGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
