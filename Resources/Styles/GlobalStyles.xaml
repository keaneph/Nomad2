    <Style x:Key="SaveButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="39"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="2,1.5,2,2"/>
        <Setter Property="Width" Value="140"/>
        <!--192 width-->
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Foreground" Value="#E0E1EE"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="ButtonBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#75B99B"
                                    BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Opacity="0.3"/>
                            </Border.Effect>
                        </Border>
                        <!-- Content Grid with Icon and Text -->
                        <Grid Margin="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <ContentPresenter Grid.Column="0" 
                                Content="{TemplateBinding Tag}"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>

                            <!-- Text -->
                            <ContentPresenter Grid.Column="1"
                                Content="{TemplateBinding Content}"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                    <GradientStop Color="#2EC78A" Offset="0.1"/>
                    <GradientStop Color="#103D2E" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
                    <GradientStop Color="#23A976" Offset="0.5"/>
                    <GradientStop Color="#103D2E" Offset="1"/>
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>

        <!-- Triggers -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background">
                    <Setter.Value>
                        <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                            <GradientStop Color="#6E2945" Offset="0.1"/>
                            <GradientStop Color="#2C1A1E" Offset="1"/>
                        </RadialGradientBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>


