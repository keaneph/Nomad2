<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <FontFamily x:Key="Rubik">/Nomad2;component/Resources/Fonts/Rubik/#Rubik</FontFamily>
    <FontFamily x:Key="RubikSemibold">/Nomad2;component/Resources/Fonts/Rubik/#Rubik Semibold</FontFamily>
    <FontFamily x:Key="RubikBold">/Nomad2;component/Resources/Fonts/Rubik/#Rubik Bold</FontFamily>

    <!-- Searchbox STYLE-->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="34"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="1.5"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Padding" Value="30,8,8,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <Grid>
                            <Path Data="{StaticResource SearchIcon}"
                                  Stroke="{StaticResource TextSecondaryBrush}"
                                  StrokeThickness="1.5"
                                  Width="20"
                                  Height="20"
                                  Margin="8,0,0,0"
                                  HorizontalAlignment="Left"/>  
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                            <TextBlock Text="Search"
                                       Margin="35,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TextBox}}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Menu header STYLE-->
    <Style x:Key="MenuHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="Margin" Value="12,0,0,8"/>
    </Style>

    <!--Menu Item STYLE-->
    <Style x:Key="MenuItemStyle" TargetType="RadioButton">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikSemibold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <!-- Left indicator bar -->
                        <Border x:Name="LeftIndicator"
                            Width="7"
                            Height="22"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            VerticalAlignment="Center"
                            BorderBrush="Transparent"
                            BorderThickness="0,1.5,1.5,1.5"
                            CornerRadius="0,5,5,0"
                            Margin="-10,0,0,0"/>

                        <!-- Main background -->
                        <Border x:Name="MainBackground"
                    Background="{TemplateBinding Background}"
                    Height="37" 
                    CornerRadius="6"
                    BorderBrush="Transparent"
                    BorderThickness="2,1.5,2,2"
                    Margin="8,0,20,-5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ContentPresenter Grid.Column="0" 
                                                Content="{TemplateBinding Tag}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1" 
                                     Text="{TemplateBinding Content}" 
                                     VerticalAlignment="Center"
                                     Foreground="{TemplateBinding Foreground}"
                                     Margin="4,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="MainBackground" Value="#1A1C2E"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" TargetName="MainBackground">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.5" RadiusY="1.2">
                                        <GradientStop Color="#4B2393" Offset="0.1"/>
                                        <GradientStop Color="#190F33" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" TargetName="LeftIndicator">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0,0.3" RadiusX="2" RadiusY="1">
                                        <GradientStop Color="#4B2393" Offset="0.4"/>
                                        <GradientStop Color="#190F33" Offset="0.7"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <!--
                            <Setter Property="Background" TargetName="LeftIndicator">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.6" RadiusY="0.9">
                                        <GradientStop Color="#4B2393" Offset="0.5"/>
                                        <GradientStop Color="#190F33" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                            -->


                            <!--Not sure whether to add this border or not-->
                            <Setter Property="BorderBrush" TargetName="MainBackground">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.7" RadiusY="0.9">
                                        <GradientStop Color="#4B2393" Offset="0.5"/>
                                        <GradientStop Color="#2B2942" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="BorderBrush" TargetName="LeftIndicator" Value="#7553B2">
                            </Setter>

                            <!--
                            <Setter Property="BorderBrush" TargetName="LeftIndicator">
                                <Setter.Value>
                                    <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,1" RadiusX="0.6" RadiusY="0.9">
                                        <GradientStop Color="#4B2393" Offset="0.5"/>
                                        <GradientStop Color="#190F33" Offset="1"/>
                                    </RadialGradientBrush>
                                </Setter.Value>
                            </Setter>
                            -->

                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#5B21B6" 
                                                    BlurRadius="20" 
                                                    ShadowDepth="0" 
                                                    Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Path STYLE-->
    <Style x:Key="PathStyle" TargetType="Path">
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="StrokeLineJoin" Value="Round"/>
        <Setter Property="StrokeStartLineCap" Value="Round"/>
    </Style>
</ResourceDictionary>