<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Form Styles -->
    <Style x:Key="FormLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="0,10,0,5"/>
    </Style>

    <!--height 34-->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Height" Value="34"/>
        <Setter Property="Background" Value="{StaticResource FourthBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource RubikBold}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="5,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <!--text inside-->
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--dark theme formdatepicker-->
    <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Background" Value="{StaticResource FourthBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="35"/>
                                </Grid.ColumnDefinitions>
                                
                                <!--this is the day-month-year text-->
                                <DatePickerTextBox x:Name="PART_TextBox"
                                          Grid.Column="0"
                                          Foreground="{TemplateBinding Foreground}"
                                          FontFamily="{StaticResource RubikSemibold}"
                                          FontSize="12"
                                          Padding="10,0,0,0"
                                          VerticalContentAlignment="Center"
                                          Background="Transparent"
                                          BorderThickness="0">
                                    <DatePickerTextBox.Template>
                                        <ControlTemplate TargetType="DatePickerTextBox">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                 Margin="0"
                                                 Background="Transparent"
                                                 BorderThickness="0"/>
                                        </ControlTemplate>
                                    </DatePickerTextBox.Template>
                                </DatePickerTextBox>
                                
                                <!--arrow button-->
                                <Button x:Name="PART_Button"
                                         Grid.Column="1"
                                         Margin="0,0,0,0"
                                         Padding="0"
                                         Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Border}}"
                                         Width="35"
                                         Foreground="#8183A7"
                                         VerticalAlignment="Stretch"
                                         HorizontalAlignment="Stretch"
                                         Style="{StaticResource TransparentButtonStyle}">
                                    <Path Data="M7,10L12,15L17,10"
                                           Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                           Style="{StaticResource PathStyle}"
                                           Width="25"
                                           Height="25"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!--where the calendar actually spawns-->
                        <Popup x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Placement="Bottom"
                                PlacementTarget="{Binding ElementName=PART_TextBox}"
                                StaysOpen="False">
                            <!--FIXME: i cant get this to work -->
                            <Border Background="#1C1C28"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             CornerRadius="8"
                             Padding="10">
                                <Calendar x:Name="PART_Calendar"
                                  Background="Transparent"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  BorderThickness="0"/>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>