<Window x:Class="Nomad2.Views.RentalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Rental Details" 
        Width="500" 
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBackgroundBrush}">

    <Border Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Create New Rental"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       Foreground="#E0E1EE"/>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" Margin="15">
                <!-- Rental ID -->
                <StackPanel>
                    <TextBlock Text="Rental ID"
                             FontWeight="SemiBold"
                             Foreground="#9A9CA5"/>
                    <TextBox Text="{Binding RentalId, Mode=OneWay}"
                             IsReadOnly="True"
                             Style="{StaticResource BaseTextBoxStyle}"/>
                </StackPanel>

                <!-- Customer Selection -->
                <StackPanel>
                    <TextBlock Text="Customer"
                             FontWeight="SemiBold"
                             Foreground="#9A9CA5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding CustomerSearch, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource BaseTextBoxStyle}"
                                ToolTip="Search customer by ID or name..."/>

                        <Button Grid.Column="1"
                                Margin="5,0,0,0"
                                Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding ShowAvailableCustomersCommand}">
                            Available
                        </Button>
                    </Grid>

                    <!-- Customer Search Results -->
                    <ListBox ItemsSource="{Binding CustomerSearchResults}"
                             SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                             MaxHeight="100"
                             Margin="0,5,0,0"
                             Style="{StaticResource BaseListBoxStyle}"
                             Visibility="{Binding IsCustomerSearchVisible, 
                                        Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock>
                                        <Run Text="{Binding CustomerId}" Foreground="#9A9CA5"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding Name}" Foreground="#E0E1EE"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding PhoneNumber}"
                                             Foreground="#9A9CA5"
                                             FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Bike Selection -->
                <StackPanel>
                    <TextBlock Text="Bike"
                             FontWeight="SemiBold"
                             Foreground="#9A9CA5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding BikeSearch, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource BaseTextBoxStyle}"
                                ToolTip="Search bike by ID or model..."/>

                        <Button Grid.Column="1"
                                Margin="5,0,0,0"
                                Style="{StaticResource ActionButtonStyle}"
                                Command="{Binding ShowAvailableBikesCommand}">
                            Available
                        </Button>
                    </Grid>

                    <!-- Bike Search Results -->
                    <ListBox ItemsSource="{Binding BikeSearchResults}"
                             SelectedItem="{Binding SelectedBike, Mode=TwoWay}"
                             MaxHeight="100"
                             Margin="0,5,0,0"
                             Style="{StaticResource BaseListBoxStyle}"
                             Visibility="{Binding IsBikeSearchVisible, 
                                        Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock>
                                        <Run Text="{Binding BikeId}" Foreground="#9A9CA5"/>
                                        <Run Text=" - "/>
                                        <Run Text="{Binding BikeModel}" Foreground="#E0E1EE"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="Rate: $" Foreground="#9A9CA5"/>
                                        <Run Text="{Binding DailyRate}" Foreground="#E0E1EE"/>
                                        <Run Text="/day" Foreground="#9A9CA5"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Rental Date -->
                <StackPanel>
                    <TextBlock Text="Rental Date"
                             FontWeight="SemiBold"
                             Foreground="#9A9CA5"/>
                    <DatePicker SelectedDate="{Binding RentalDate}"
                              Style="{StaticResource BaseDatePickerStyle}"/>
                </StackPanel>

                <!-- Status -->
                <StackPanel>
                    <TextBlock Text="Status"
                             FontWeight="SemiBold"
                             Foreground="#9A9CA5"/>
                    <ComboBox ItemsSource="{Binding AvailableStatuses}"
                            SelectedItem="{Binding RentalStatus}"
                            Style="{StaticResource BaseComboboxStyle}"/>
                </StackPanel>

                <Button Content="Debug State"
                        Command="{Binding DebugStateCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Width="100"
                        Margin="0,0,10,0"/>
                        </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource CancelButtonStyle}"
                        Width="100"
                        Margin="0,0,10,0"/>

                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>