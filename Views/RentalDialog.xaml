<Window x:Class="Nomad2.Views.RentalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="620" 
        Width="560"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBackgroundBrush}"
        ResizeMode="NoResize">

    <Border>
        <Grid Margin="35,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}"                    
                          Foreground="{StaticResource TextPrimaryBrush}"
                          FontSize="24"
                          FontFamily="{StaticResource RubikBold}"
                          Margin="0,0,0,5"/>
                <TextBlock Text="All fields marked with * are required"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          FontSize="12"
                          FontFamily="{StaticResource RubikSemibold}"
                          Margin="0,0,0,15"/>
                <Border Height="1" 
                        Background="{StaticResource PrimaryBackgroundBrush}" 
                        Margin="0,0,0,15"/>
            </StackPanel>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <!-- Rental ID -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock Text="Rental ID"
                             DockPanel.Dock="Top"
                             FontFamily="{StaticResource RubikSemibold}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,5"/>
                    <Border Background="{StaticResource ThirdBackgroundBrush}" 
                            CornerRadius="8"
                            Padding="15,8"
                            Height="34">
                        <TextBlock Text="{Binding RentalId}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center"                                 
                                 FontFamily="{StaticResource RubikSemibold}"/>
                    </Border>
                </DockPanel>

                <!-- Customer Selection -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Run Text="Customer" 
                             FontFamily="{StaticResource RubikSemibold}" 
                             Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="*" 
                             Foreground="{StaticResource RedBrush}"/>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding CustomerSearch, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource FormTextBoxStyle}"
                                Height="34"/>

                        <Button Grid.Column="1"
                                Content="{Binding CustomerButtonText}"
                                Command="{Binding ToggleCustomerListCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="100"
                                Height="39"
                                Margin="10,0,0,0">
                            <Button.Tag>
                                <Viewbox Width="16" Height="16">
                                    <Grid>
                                        <Path Data="{StaticResource BrowseIcon}"
                                              Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                              Style="{StaticResource PathStyle}"/>
                                    </Grid>
                                </Viewbox>
                            </Button.Tag>
                        </Button>
                    </Grid>
                </DockPanel>

                <!-- Customer Search Results -->
                <ListBox ItemsSource="{Binding CustomerSearchResults}"
                         SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                         MaxHeight="100"
                         Margin="0,0,0,15"
                         Style="{StaticResource BaseListBoxStyle}"
                         Visibility="{Binding IsCustomerSearchVisible, 
                                    Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="{Binding CustomerId}" 
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding Name}" 
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding PhoneNumber}"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Bike Selection -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Run Text="Bike" 
                             FontFamily="{StaticResource RubikSemibold}" 
                             Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="*" 
                             Foreground="{StaticResource RedBrush}"/>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Text="{Binding BikeSearch, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource FormTextBoxStyle}"
                                Height="34"/>

                        <Button Grid.Column="1"
                                Content="{Binding BikeButtonText}"
                                Command="{Binding ToggleBikeListCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Width="100"
                                Height="39"
                                Margin="10,0,0,0">
                            <Button.Tag>
                                <Viewbox Width="16" Height="16">
                                    <Grid>
                                        <Path Data="{StaticResource BrowseIcon}"
                                              Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                              Style="{StaticResource PathStyle}"/>
                                    </Grid>
                                </Viewbox>
                            </Button.Tag>
                        </Button>
                    </Grid>
                </DockPanel>

                <!-- Bike Search Results -->
                <ListBox ItemsSource="{Binding BikeSearchResults}"
                         SelectedItem="{Binding SelectedBike, Mode=TwoWay}"
                         MaxHeight="100"
                         Margin="0,0,0,15"
                         Style="{StaticResource BaseListBoxStyle}"
                         Visibility="{Binding IsBikeSearchVisible, 
                                    Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock>
                                    <Run Text="{Binding BikeId}" 
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding BikeModel}" 
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Rate: $" 
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Run Text="{Binding DailyRate}" 
                                         Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Run Text="/day" 
                                         Foreground="{StaticResource TextSecondaryBrush}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Rental Date -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Run Text="Rental Date" 
                             FontFamily="{StaticResource RubikSemibold}" 
                             Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="*" 
                             Foreground="{StaticResource RedBrush}"/>
                    </TextBlock>
                    <DatePicker SelectedDate="{Binding RentalDate}"
                              Style="{StaticResource FormDatePickerStyle}"
                              Height="35"/>
                </DockPanel>

                <!-- Status -->
                <DockPanel LastChildFill="True" Margin="0,0,0,5">
                    <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Run Text="Status" 
                             FontFamily="{StaticResource RubikSemibold}" 
                             Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="*" 
                             Foreground="{StaticResource RedBrush}"/>
                    </TextBlock>
                    <ComboBox ItemsSource="{Binding AvailableStatuses}"
                            SelectedItem="{Binding RentalStatus}"
                            Style="{StaticResource BaseComboboxStyle}"
                              Margin="-323,0,0,10"/>
                </DockPanel>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource RedBrush}"
                           FontFamily="{StaticResource RubikSemibold}"
                           VerticalAlignment="Center"
                           Margin="0,15,0,0"/>
            </StackPanel>

            <!-- Bottom Section -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource CancelButtonStyle}"
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0">
                    <Button.Tag>
                        <Viewbox Width="16" Height="16">
                            <Grid>
                                <Path Data="{StaticResource CancelIcon}"
                                      Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                      Style="{StaticResource PathStyle}"/>
                            </Grid>
                        </Viewbox>
                    </Button.Tag>
                </Button>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource SaveButtonStyle}"
                        Width="120"
                        Height="35">
                    <Button.Tag>
                        <Viewbox Width="16" Height="16">
                            <Grid>
                                <Path Data="{StaticResource SaveIcon}"
                                      Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                      Style="{StaticResource PathStyle}"/>
                            </Grid>
                        </Viewbox>
                    </Button.Tag>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>