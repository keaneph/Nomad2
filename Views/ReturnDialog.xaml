<Window x:Class="Nomad2.Views.ReturnDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nomad2.Views"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="620" 
        Width="560"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource PrimaryBackgroundBrush}"
        ResizeMode="NoResize">

    <Border>
        <Grid Margin="35,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel>
                <TextBlock Text="{Binding DialogTitle}"                    
                          Foreground="{StaticResource TextPrimaryBrush}"
                          FontSize="24"
                          FontFamily="{StaticResource RubikBold}"
                          Margin="0,0,0,5"/>
                <TextBlock Text="All fields marked with * are required"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          FontSize="12"
                          FontFamily="{StaticResource RubikSemibold}"
                          Margin="0,0,0,15"/>
                <Border Height="1" 
                        Background="{StaticResource PrimaryBackgroundBrush}" 
                        Margin="0,0,0,15"/>
            </StackPanel>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <!-- Rental ID -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock Text="Rental ID"
                             DockPanel.Dock="Top"
                             FontFamily="{StaticResource RubikSemibold}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,5"/>
                    <Border Background="{StaticResource ThirdBackgroundBrush}" 
                            CornerRadius="8"
                            Padding="15,8"
                            Height="34">
                        <TextBlock Text="{Binding RentalId}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center"                                 
                                 FontFamily="{StaticResource RubikSemibold}"/>
                    </Border>
                </DockPanel>

                <!-- Rental Date -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock Text="Rental Date"
                             DockPanel.Dock="Top"
                             FontFamily="{StaticResource RubikSemibold}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,5"/>
                    <Border Background="{StaticResource ThirdBackgroundBrush}" 
                            CornerRadius="8"
                            Padding="15,8"
                            Height="34">
                        <TextBlock Text="{Binding RentalDate, StringFormat=MM/dd/yyyy}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 VerticalAlignment="Center"                                 
                                 FontFamily="{StaticResource RubikSemibold}"/>
                    </Border>
                </DockPanel>

                <!-- Customer Details -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock Text="Customer Details"
                             DockPanel.Dock="Top"
                             FontFamily="{StaticResource RubikSemibold}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Customer Name -->
                        <TextBlock Text="Name:"
                                 Grid.Row="0" Grid.Column="0"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 Margin="0,0,10,5"/>
                        <TextBlock Text="{Binding CustomerName}"
                                 Grid.Row="0" Grid.Column="1"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 Margin="0,0,0,5"/>

                        <!-- Phone Number -->
                        <TextBlock Text="Phone:"
                                 Grid.Row="1" Grid.Column="0"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 Margin="0,0,10,5"/>
                        <TextBlock Text="{Binding CustomerPhone}"
                                 Grid.Row="1" Grid.Column="1"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 Margin="0,0,0,5"/>
                    </Grid>
                </DockPanel>

                <!-- Bike Details -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock Text="Bike Details"
                             DockPanel.Dock="Top"
                             FontFamily="{StaticResource RubikSemibold}"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Bike Model -->
                        <TextBlock Text="Model:"
                                 Grid.Row="0" Grid.Column="0"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 Margin="0,0,10,5"/>
                        <TextBlock Text="{Binding BikeModel}"
                                 Grid.Row="0" Grid.Column="1"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 Margin="0,0,0,5"/>

                        <!-- Daily Rate -->
                        <TextBlock Text="Rate:"
                                 Grid.Row="1" Grid.Column="0"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextSecondaryBrush}"
                                 Margin="0,0,10,5"/>
                        <TextBlock Text="{Binding DailyRate, StringFormat=â‚±{0}/day}"
                                 Grid.Row="1" Grid.Column="1"
                                 FontFamily="{StaticResource RubikSemibold}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 Margin="0,0,0,5"/>
                    </Grid>
                </DockPanel>

                <!-- Return Date -->
                <DockPanel LastChildFill="True" Margin="0,0,0,15">
                    <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">
                        <Run Text="Return Date" 
                             FontFamily="{StaticResource RubikSemibold}" 
                             Foreground="{StaticResource TextPrimaryBrush}"/>
                        <Run Text="*" 
                             Foreground="{StaticResource RedBrush}"/>
                    </TextBlock>
                    <DatePicker SelectedDate="{Binding ReturnDate}"
                              Style="{StaticResource FormDatePickerStyle}"
                              Height="35"/>
                </DockPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="{StaticResource RedBrush}"
                         FontFamily="{StaticResource RubikSemibold}"
                         VerticalAlignment="Center"
                         Margin="0,15,0,0"/>
            </StackPanel>

            <!-- Bottom Buttons -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Button Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource CancelButtonStyle}"
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0">
                    <Button.Tag>
                        <Viewbox Width="16" Height="16">
                            <Grid>
                                <Path Data="{StaticResource CancelIcon}"
                                      Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                      Style="{StaticResource PathStyle}"/>
                            </Grid>
                        </Viewbox>
                    </Button.Tag>
                </Button>

                <!-- Save Button -->
                <Button Grid.Column="2"
                        Content="Save"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource SaveButtonStyle}"
                        Width="120"
                        Height="35">
                    <Button.Tag>
                        <Viewbox Width="16" Height="16">
                            <Grid>
                                <Path Data="{StaticResource SaveIcon}"
                                      Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                      Style="{StaticResource PathStyle}"/>
                            </Grid>
                        </Viewbox>
                    </Button.Tag>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window> 