<UserControl x:Class="Nomad2.Views.CustomersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Nomad2.Views"
             mc:Ignorable="d"
             Background="{StaticResource PrimaryBackgroundBrush}">

    <Grid Margin="20,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top Controls -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Sort Combo Box -->
            <ComboBox Grid.Column="0"
                      Style="{StaticResource BaseComboboxStyle}"
                      ItemsSource="{Binding SortOptions}"
                      SelectedItem="{Binding SelectedSortOption}"/>

            <!-- Add Customer Button -->
            <Button Grid.Column="2"
                    Command="{Binding AddCustomerCommand}"
                    Style="{StaticResource PrimaryButtonStyle}">
                <Button.Tag>
                    <Viewbox Width="16" 
                             Height="16">
                        <Grid>
                            <Path Data="{StaticResource AddCustomersIcon}"
                                  Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                  Style="{StaticResource PathStyle}"/>
                        </Grid>
                    </Viewbox>
                </Button.Tag>
                Add Customer
            </Button>
        </Grid>

        <DataGrid Grid.Row="1"
                  Style="{StaticResource DataGridStyle}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"                 
                  CellStyle="{StaticResource DataGridCellStyle}"
                  RowStyle="{StaticResource DataGridRowStyle}"
                  SelectionUnit="FullRow"
                  ItemsSource="{Binding Customers}"
                  AutoGenerateColumns="False"
                  Padding="10,0,10,0"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Government ID" 
                          Binding="{Binding GovernmentIdPicture}"
                          Width="120"/>
                <DataGridTextColumn Header="Customer ID" 
                          Binding="{Binding CustomerId}"
                          Width="120"/>
                <DataGridTextColumn Header="Name" 
                          Binding="{Binding Name}"
                          Width="200"/>
                <DataGridTextColumn Header="Phone Number" 
                          Binding="{Binding PhoneNumber}"
                          Width="120"/>
                <DataGridTextColumn Header="Address" 
                          Binding="{Binding Address}"
                          Width="240"/>
                <DataGridTextColumn Header="Status" 
                          Binding="{Binding CustomerStatus}"
                          Width="80"/>
                <DataGridTextColumn Header="Registration Date" 
                          Binding="{Binding RegistrationDate, StringFormat={}{0:MM/dd/yyyy}}"
                          Width="140"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Edit"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding DataContext.EditCustomerCommand, 
                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Margin="5,0"
                                Width="50"
                                Height="30"/>
                                <Button Content="Delete"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Command="{Binding DataContext.DeleteCustomerCommand,
                                          RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Width="50"
                                Height="30"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom Controls -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Clear Button -->
            <Button Grid.Column="0"
                    Command="{Binding AddCustomerCommand}"
                    Style="{StaticResource SecondaryButtonStyle}">
                <Button.Tag>
                    <Viewbox Width="16" 
                             Height="16">
                        <Grid>
                            <Path Data="{StaticResource ClearIcon}"
                                  Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                  Style="{StaticResource PathStyle}"/>
                        </Grid>
                    </Viewbox>
                </Button.Tag>
                Clear Table
            </Button>

            <!-- Pagination -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="-120,0,0,0">
                <Button
                        Command="{Binding PreviousPageCommand}"
                        Style="{StaticResource TertiaryButtonStyle}">
                    <Button.Tag>
                        <Viewbox Width="16" 
                                 Height="16">
                            <Grid>
                                <Path Data="{StaticResource ArrowLeftIcon}"
                                              Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                              Style="{StaticResource PathStyle}"/>
                            </Grid>
                        </Viewbox>
                    </Button.Tag>
                </Button>
                <TextBlock Text="{Binding CurrentPageDisplay}"
                           FontFamily="{StaticResource RubikSemibold}"
                           Foreground="#E0E1EE"
                           VerticalAlignment="Center"
                           Margin="20,0"/>
                <Button Command="{Binding NextPageCommand}"
                        Style="{StaticResource TertiaryButtonStyle}">
                    <Button.Tag>
                        <Viewbox Width="16" 
                                 Height="16">
                            <Grid>
                                <Path Data="{StaticResource ArrowRightIcon}"
                                              Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                              Style="{StaticResource PathStyle}"/>
                            </Grid>
                        </Viewbox>
                    </Button.Tag>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>