<Window x:Class="Nomad2.Views.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Viewer" 
        Height="600" 
        Width="750" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Grid>
        <Image x:Name="FullSizeImage" 
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"
               Margin="20">
            <Image.LayoutTransform>
                <RotateTransform x:Name="ImageRotation" Angle="0"/>
            </Image.LayoutTransform>
        </Image>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="20">
            <Button Content="Rotate Left" 
                    Click="RotateLeft_Click"
                    Margin="5"
                    Padding="20,10"
                    Style="{StaticResource PrimaryButtonStyle}"/>

            <Button Content="Rotate Right" 
                    Click="RotateRight_Click"
                    Margin="5"
                    Padding="20,10"
                    Style="{StaticResource PrimaryButtonStyle}"/>

            <Button Content="Close" 
                    Click="CloseButton_Click"
                    Margin="5"
                    Padding="20,10"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>